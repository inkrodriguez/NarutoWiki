<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardNaruto"
        android:layout_width="338dp"
        android:layout_height="196dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="80dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="20dp"
        card_view:contentPaddingTop="10dp"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.49"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="148dp"
            android:layout_height="173dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/narutoperfil" />

        <TextView
            android:id="@+id/infoCardNaruto"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="165dp"
            android:text="NARUTO UZUMAKI"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="147dp"
            android:layout_height="140dp"
            android:layout_gravity="left"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="30dp"
            android:text="é um shinobi de Konohagakure do clã Uzumaki e protagonista homônimo da franquia Naruto. Desde seu nascimento, ele se tornou jinchūriki das Nove-Caudas, um destino que o levou a ser condenado e negligenciado por toda a aldeia durante sua infância. Depois de entrar para o Time 7, ao lado de Sakura Haruno, Sasuke Uchiha e sob comando de Kakashi Hatake, Naruto trabalhou duro para ganhar o respeito e o reconhecimento da aldeia, com o sonho de se tornar Hokage." />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardKakashi"
        android:layout_width="338dp"
        android:layout_height="196dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="28dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="20dp"
        card_view:contentPaddingTop="10dp"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.49"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/cardNaruto">

        <ImageView
            android:id="@+id/imageKakashi"
            android:layout_width="148dp"
            android:layout_height="173dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/kakashi" />

        <TextView
            android:id="@+id/infoCardKakashi"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="165dp"
            android:text="KAKASHI HATAKE"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="147dp"
            android:layout_height="140dp"
            android:layout_gravity="left"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="30dp"
            android:text="Kakashi Hatake, sensei de Naruto...." />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>